<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="register-link" remove="true" />
        <referenceBlock name="authorization-link" remove="true" />
        <referenceBlock name="my-account-link" remove="true" />

        <referenceBlock name="sidebar.additional" remove="true" />
        
        <referenceBlock name="customer-account-navigation-customer-balance-link" remove="true"/>
        <referenceBlock name="customer-account-navigation-downloadable-products-link" remove="true"/>
        <referenceBlock name="customer-account-navigation-newsletter-subscriptions-link" remove="true"/>
        <referenceBlock name="customer-account-navigation-my-credit-cards-link" remove="true"/>
        <referenceBlock name="customer-account-navigation-gift-card-link" remove="true"/>
        <referenceBlock name="customer-account-navigation-checkout-sku-link" remove="true"/>
        <referenceBlock name="customer-account-navigation-giftregistry-link" remove="true"/>
        
        <referenceBlock name="customer-account-navigation-reward-link" remove="true"/>
        <referenceBlock name="customer-account-navigation-magento-invitation-link" remove="true"/>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Customer\Block\Account\SortLinkInterface" name="customer-account-navigation">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Change Password</argument>
                    <argument name="path" xsi:type="string">ecommage_update_account/update/change</argument>
                    <argument name="sortOrder" xsi:type="number">250</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="customer_account_navigation">
            <!-- <block class="Magento\Customer\Block\Account\SortLinkInterface" name="customer-order-raffle-link">
                <arguments>
                    <argument name="path" xsi:type="string">wishlist</argument>
                    <argument name="label" xsi:type="string">WISHLIST</argument>

                </arguments>
            </block> -->
        </referenceBlock>
        <referenceBlock name="customer-account-navigation-account-edit-link" remove="true"/>
        <referenceBlock name="customer-account-navigation-delimiter-1" remove="true"/>
        <referenceBlock name="customer-account-navigation-delimiter-2" remove="true"/>
        <referenceContainer name="columns" >
            <block class="Magento\Framework\View\Element\Template" name="breadcrumb-customer" template="Ecommage_OrderRaffle::breadcrumb/breadcrumb.phtml" before="-"/>
        </referenceContainer>
        
    </body>
</page>
