<?xml version="1.0"?>
<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Config/etc/view.xsd">

    <vars module="Magento_Catalog">
        <var name="gallery">
            <var name="navdir">vertical</var>
        </var>
    </vars>

    <vars module="Magento_PageBuilder">
       <var name="breakpoints">
           <var name="desktop">
               <var name="conditions">
                   <var name="min-width">1024px</var>
               </var>
               <var name="options">
                   <var name="products">
                       <var name="default">
                           <var name="slidesToShow">4</var>
                       </var>
                   </var>
               </var>
           </var>
           <var name="tablet">
               <var name="conditions">
                   <var name="max-width">1024px</var>
                   <var name="min-width">768px</var>
               </var>
               <var name="options">
                   <var name="products">
                       <var name="default">
                           <var name="slidesToShow">3</var>
                       </var>
                       <var name="continuous">
                           <var name="slidesToShow">3</var>
                       </var>
                   </var>
               </var>
           </var>
           <var name="mobile">
               <var name="conditions">
                   <var name="max-width">767px</var>
                   <var name="min-width">640px</var>
               </var>
               <var name="options">
                   <var name="products">
                       <var name="default">
                           <var name="slidesToShow">2</var>
                       </var>
                   </var>
               </var>
           </var>
           <var name="mobile-small">
               <var name="conditions">
                   <var name="max-width">640px</var>
               </var>
               <var name="options">
                   <var name="products">
                       <var name="default">
                           <var name="slidesToShow">2</var>
                           <var name="slidesToScroll">2</var>
                       </var>
                       <var name="continuous">
                           <var name="slidesToShow">2</var>
                           <var name="slidesToScroll">2</var>
                       </var>
                   </var>
               </var>
           </var>
       </var>
    </vars>

