<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <paygcc_apicheckout>
                <active>1</active>
                <model>PL\Paygcc\Model\ApiCheckout</model>
                <title>PayGCC (Mastercard / Visa / Mada / Knet)</title>
                <company_code backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <payment_type>1</payment_type>
                <order_prefix>TEST</order_prefix>
                <ssl_enabled>0</ssl_enabled>
                <payment_action>order</payment_action>
                <debug>0</debug>
                <allowspecific>0</allowspecific>
            </paygcc_apicheckout>
            <paygcc_benefit>
                <active>0</active>
                <model>PL\Paygcc\Model\Benefit</model>
                <title>PayGCC (Debit Card)</title>
                <company_code backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <order_prefix>TEST</order_prefix>
                <ssl_enabled>0</ssl_enabled>
                <payment_action>order</payment_action>
                <debug>0</debug>
                <allowspecific>0</allowspecific>
            </paygcc_benefit>
        </payment>
    </default>
</config>
