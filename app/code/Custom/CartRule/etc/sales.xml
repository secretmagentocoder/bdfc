    <section name="quote">
        <group name="totals">
            <item name="customfee" instance="Custom\CartRule\Model\Total\CustomFee" sort_order="150"/>
        </group>
    </section>
    <section name="order_invoice">
        <group name="totals">
            <item name="customfee" instance="Custom\CartRule\Model\Invoice\Total\CustomFee" sort_order="150"/>
