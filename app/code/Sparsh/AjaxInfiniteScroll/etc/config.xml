<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
	<default>
		<sparsh_ajax_infinite_scroll>
            <general>
                <enabled>1</enabled>
            </general>
            <selectors>
                <delay>600</delay>
                <content>.main</content>
                <pagination>.pages-items</pagination>
                <next>.next</next>
                <item>.product-item</item>
            </selectors>
            <design>
                <loading_text><![CDATA[<em>Loading - please wait...</em>]]></loading_text>
                <done_text><![CDATA[<em>You've reached the end of the item.</em>]]></done_text>
            </design>
        </sparsh_ajax_infinite_scroll>
    </default>
</config>
