            <column name="id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="MAGEWORX_OPTIONTEMPLATES_RELATION_GROUP_ID_PRODUCT_ID">
            <column name="group_id"/>
            <column name="product_id"/>
        </constraint>
